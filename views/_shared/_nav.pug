mixin nav(user)
    nav
        ul.nav
            li#nav-todos.has-dropdown
                a.toggle(href="#")
                    | TODOs
                .dropdown.hidden
                    ul.list
                        li
                            a#nav-todos-all(href="/todos")
                                | All
                        li
                            a#nav-todos-create(href="/todos/form")
                                | Create
            if user
                li#nav-user.has-dropdown
                    a.toggle(href="#")
                        =user.username
                    .dropdown.hidden
                        ul.list
                            li
                                a(href="/auth/sign-out")
                                    | Sign out
            else
                li#nav-user.has-dropdown
                    a.toggle(href="#")
                        | User
                    .dropdown.hidden
                        ul.list
                            li
                                a#nav-sign-in(href='/auth/sign-in')
                                    | Sign in
                            li
                                a#nav-sign-up(href='/auth/sign-up')
                                    | Sign up